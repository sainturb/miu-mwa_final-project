FROM node:19-alpine

ARG AWS_S3_ID
ARG AWS_S3_SECRET
ARG AWS_S3_BUCKET
ARG MONGO_DB_USER
ARG MONGO_DB_PASS

ENV AWS_S3_ID=$AWS_S3_ID
ENV AWS_S3_SECRET=$AWS_S3_SECRET
ENV AWS_S3_BUCKET=$AWS_S3_BUCKET
ENV MONGO_DB_USER=$MONGO_DB_USER
ENV MONGO_DB_PASS=$MONGO_DB_PASS

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

COPY . .

RUN npm install --quiet

EXPOSE 3000

CMD ["npm", "run", "start"]
